<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zyp.homework.HandleNameSelectActivity">

    <TextView
        android:id="@+id/text_view_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="删除 李四 记录么？"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/eight_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_click_affirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/forty_eight_dp"
            android:layout_weight="1"
            android:text="@string/btn_affirm"/>

        <Button
            android:id="@+id/btn_click_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/forty_eight_dp"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_weight="1"
            android:text="@string/btn_cancel"/>

    </LinearLayout>

</LinearLayout>
